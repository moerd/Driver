<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B2B2B "
    android:backgroundTint="#2B2B2B "
    android:backgroundTintMode="src_in"
    tools:context=".Home">

    <TextView
        android:id="@+id/name3"
        android:layout_width="177dp"
        android:layout_height="31dp"
        android:layout_marginTop="124dp"
        android:text="Dashboard"
        android:textColor="#E4E3E3"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/status"
        android:layout_width="144dp"
        android:layout_height="32dp"
        android:layout_marginTop="124dp"
        android:background="#535353"
        android:text="On Track"
        android:textAlignment="textEnd"
        android:textColor="#EDE9E9"
        android:textColorHighlight="#AA2E2E"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.94"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/taxi"
        android:layout_width="187dp"
        android:layout_height="35dp"
        android:layout_marginTop="36dp"
        android:text="taxi : 6541235"
        android:textColor="#E4E3E3"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/name" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="71dp"
        android:layout_height="66dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/saji" />

    <TextView
        android:id="@+id/name"
        android:layout_width="177dp"
        android:layout_height="31dp"
        android:layout_marginTop="16dp"
        android:text="Saji Nael"
        android:textColor="#E4E3E3"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.405"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="#00FBFBFB"
        android:text="Logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.934"
        app:layout_constraintStart_toEndOf="@+id/name"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="354dp"
        android:layout_height="355dp"
        android:layout_marginBottom="16dp"
        android:textAlignment="center"
        app:cardBackgroundColor="#535353 "
        app:flow_horizontalAlign="center"
        app:flow_verticalAlign="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center|center_horizontal"
            android:background="#2B2B2B ">

            <Button
                android:id="@+id/button7"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="ffffff"
                android:backgroundTint="#535353 "
                android:text="Queue"
                app:layout_column="0"
                app:layout_row="0" />

            <Button
                android:id="@+id/button8"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="#00FFFFFF"
                android:backgroundTint="#00FFFFFF"
                android:text="Trip History" />

            <Button
                android:id="@+id/button9"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="#00FFFFFF"
                android:text="Requests"
                app:layout_column="0"
                app:layout_row="1" />

            <Button
                android:id="@+id/button6"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="#00FFFFFF"
                android:text="Reports"
                app:layout_column="1"
                app:layout_row="2" />

            <Button
                android:id="@+id/button4"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="#00FFFFFF"
                android:text="Trip History"
                app:layout_column="0"
                app:layout_row="2" />

            <Button
                android:id="@+id/button5"
                android:layout_width="150dp"
                android:layout_height="85dp"
                android:background="#00FFFFFF"
                android:text="Customer Requests"
                app:layout_column="1"
                app:layout_row="1" />
        </androidx.gridlayout.widget.GridLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="355dp"
        android:layout_height="110dp"
        android:background="#535353 "
        android:orientation="horizontal"
        android:padding="10dp"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="212dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="81dp"
            android:layout_weight="1"
            android:background="#2B2B2B "
            android:padding="5dp"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:text="5 \n Trip"
            android:textColor="#D6D1D1"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="81dp"
            android:layout_weight="1"
            android:background="#2B2B2B "
            android:padding="5dp"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:text="35 \n Customer"
            android:textColor="#F4ECEC"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="81dp"
            android:layout_weight="1"
            android:background="#2B2B2B "
            android:padding="5dp"
            android:text="0 \n Queue"
            android:textColor="#DFDCDC"
            android:textSize="24sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>